# Example backend .env (redacted) â€” safe to commit
# Copy this to `.env` or use in docs. Do NOT put real secrets here.

# --- Database
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=REDACTED_PASSWORD
# If you prefer a single URL (optional):
# DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# --- App / Flask
FLASK_ENV=production
PYTHON_VERSION=3.11.9
SECRET_KEY=replace_with_random_secret
FRONTEND_URL=https://your-frontend.example.com
CORS_ALLOWED_ORIGINS=https://your-frontend.example.com

# --- DocuSign
DOCUSIGN_ACCOUNT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
DOCUSIGN_AUTH_SERVER=account-d.docusign.com
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi
DOCUSIGN_PRIVATE_KEY_PATH=./docusign_private.key

# --- Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=REDACTED
CLOUDINARY_API_SECRET=REDACTED

# --- Email / Brevo / SMTP
BREVO_API_KEY=REDACTED
BREVO_SENDER_EMAIL=you@example.com
BREVO_SENDER_NAME="Your App Name"
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=REDACTED

# --- LLM / OpenRouter / OpenAI
OPENROUTER_API_KEY=REDACTED
OPENAI_API_KEY=REDACTED

# --- Encryption / Misc
ENCRYPTION_KEY=REDACTED_BASE64_KEY
DB_SSLMODE=require

# --- Firebase
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# --- Optional
SENDGRID_API_KEY=
DEBUG=false
